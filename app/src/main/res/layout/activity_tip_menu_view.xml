<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.blinkdagger.androidLab.UI.activity.TipMenuViewActivity">
    
    
    <cn.blinkdagger.androidLab.Widget.TipMenuView
        android:id="@+id/tip_menu_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:tipMenuBorderRadius="3dp"
        app:tipMenuBgColor="@color/common_c7"
        app:tipMenuItemHeight="32dp"
        app:tipMenuTextColor="@color/common_c1"
        app:tipMenuTextSize="14sp"
        app:tipMenuTrangleGravity="LeftBottom"
        app:tipMenuTrangleHeight="8dp"
        app:tipMenuTrangleBottomLength="12dp"
        app:tipMenuTrangleMargin="41dp"
        app:tipMenuSeparateLineHeight="0.5dp"
        app:tipMenuSeparateLineColor="@color/common_c1"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:backgroundTint="@color/common_c7"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_anchor="@id/custom_popup_ll"
        app:layout_anchorGravity="bottom|right"
        app:pressedTranslationZ="12dp"
        app:rippleColor="#a6a6a6" />

</android.support.constraint.ConstraintLayout>
