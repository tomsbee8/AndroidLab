<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>


    <declare-styleable name="SelectBarView" tools:ignore="ResourceName">
        <!--声明我们的属性，名称为default_size,取值类型为尺寸类型（dp,px等）-->
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderRadius" format="dimension" />
        <attr name="bgColor" format="color" />
        <attr name="checkedBgColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="checkedTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="checkedTextSize" format="dimension" />
        <attr name="splitLineColor" format="color" />
        <attr name="splitLineWidth" format="dimension" />
        <attr name="dotColor" format="color" />
        <attr name="dotRadius" format="dimension" />
    </declare-styleable>

    <!--TipView-->
    <declare-styleable name="TipView" tools:ignore="ResourceName">
        <attr name="TipBgColor" format="color" />
        <attr name="TipTextColor" format="color" />
        <attr name="TipTextSize" format="dimension" />
        <attr name="TipRectHeight" format="dimension" />
        <attr name="TipBorderRadius" format="dimension" />
        <attr name="TipTextContent" format="string" />
        <attr name="trangleHeight" format="dimension" />
        <attr name="trangleBottomLength" format="dimension" />
        <attr name="trangleMargin" format="dimension" />
        <attr name="trangleGravity">
            <enum name="LeftTop" value="1" />
            <enum name="LeftBottom" value="2" />
            <enum name="RightTop" value="3" />
            <enum name="RightBottom" value="4" />
        </attr>
    </declare-styleable>

    <!--TipMenuView-->
    <declare-styleable name="TipMenuView" tools:ignore="ResourceName">
        <attr name="tipMenuBgColor" format="color" />
        <attr name="tipMenuTextColor" format="color" />
        <attr name="tipMenuTextSize" format="dimension" />
        <attr name="tipMenuItemHeight" format="dimension" />
        <attr name="tipMenuItemPressedColor" format="color" />
        <attr name="tipMenuSeparateLineHeight" format="dimension" />
        <attr name="tipMenuSeparateLineColor" format="color" />
        <attr name="tipMenuBorderRadius" format="dimension" />
        <attr name="tipMenuTrangleHeight" format="dimension" />
        <attr name="tipMenuTrangleBottomLength" format="dimension" />
        <attr name="tipMenuTrangleMargin" format="dimension" />
        <attr name="tipMenuTrangleGravity">
            <enum name="LeftTop" value="1" />
            <enum name="LeftBottom" value="2" />
            <enum name="RightTop" value="3" />
            <enum name="RightBottom" value="4" />
        </attr>
    </declare-styleable>

    <!--TimeLineView-->
    <declare-styleable name="TimeLineItemView" tools:ignore="ResourceName">
        <attr name="dot_radius" format="dimension"/>
        <attr name="dot_color" format="color"/>
        <attr name="line_color" format="color"/>
        <attr name="line_width" format="dimension"/>
        <attr name="top_line_height" format="dimension"/>
        <attr name="bottom_line_height" format="dimension"/>
    </declare-styleable>

    <!-- 带小三角形的FrameLayout -->
    <declare-styleable name="TriangleFrameLayout">
        <attr name="triangleGravity"  format="enum">
            <enum name="left" value= "0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
            <enum name="center" value="4"/>
        </attr>
        <attr name="triangleDirection"  format="enum">
            <enum name="left" value= "0"/>
            <enum name="right" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="triangleWidth" format="dimension"/>
        <attr name="triangleHeight" format="dimension"/>
        <attr name="rectangleRadius"  format="dimension"/>
        <attr name="rectangleColor" format="color" />
        <attr name="offset" format="dimension" />

    </declare-styleable>

    <declare-styleable name="SwitchRadioGroup">
        <attr name="itemWidth"/>
        <attr name="itemHeight" format="dimension"/>
        <attr name="bgRadius" format="dimension"/>
        <attr name="selectedBgRadius" format="dimension"/>
        <attr name="bgColor" format="color"/>
        <attr name="selectedBgColor" format="color"/>
        <attr name="textSize"/>
        <attr name="selectedTextSize"/>
        <attr name="textColor"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="itemArray" format="reference"/>
    </declare-styleable>

    <!--  圆形扩散图 -->
    <declare-styleable name="DiffuseView" tools:ignore="ResourceName">
        <attr name="diffuse_color"  format="color"/>
        <attr name="diffuse_coreColor" format="color"/>
        <attr name="diffuse_coreImage" format="reference"/>
        <attr name="diffuse_coreRadius" format="dimension"/>
        <attr name="diffuse_width" format="dimension" />
        <attr name="diffuse_maxWidth" format="dimension"/>
    </declare-styleable>

    <!--  波纹扩散图 -->
    <declare-styleable name="RippleDiffuseView" tools:ignore="ResourceName">
        <attr name="color"  format="color"/>
        <attr name="imageSrc" format="reference"/>
        <attr name="imageWidth" format="dimension"/>
        <attr name="imageHeight" format="dimension" />
        <attr name="minRadius" format="dimension" />
        <attr name="maxRadius" format="dimension" />
        <attr name="maxCircleCount" format="integer" />
        <attr name="strokeWidth" format="dimension"/>
    </declare-styleable>

    <!-- 水平StepView -->
    <declare-styleable name="HorizontalStepView" tools:ignore="ResourceName">
        <attr name="selectedTextSize"  format="dimension"/>
        <attr name="activedTextColor"  format="color"/>
        <attr name="normalTextSize" format="dimension"/>
        <attr name="normalTextColor" format="color"/>
        <attr name="activedDotColor" format="color" />
        <attr name="activedDotRadius" format="dimension" />
        <attr name="currentDotRadius" format="dimension" />
        <attr name="normalDotRadius" format="dimension" />
        <attr name="normalDotColor" format="color" />
        <attr name="dotImage" format="reference"/>
        <attr name="lineColor" format="color"/>
        <attr name="activatedLineColor" format="color"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="itemWidth" format="dimension"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowWidth" format="dimension"/>
    </declare-styleable>


</resources>
