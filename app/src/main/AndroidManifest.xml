<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.blinkdagger.androidLab">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".AndroidLabApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".ui.activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.CollapsingActivity" />
        <activity android:name=".ui.activity.NestedScrollActivity" />
        <activity android:name=".ui.activity.ImmersiveModeActivity" />
        <activity android:name=".ui.activity.DrawerActivity" />
        <activity android:name=".ui.activity.CustomPopupWindowActivity" />
        <activity android:name=".ui.activity.TipMenuViewActivity" />
        <activity android:name=".ui.activity.TipViewActivity" />
        <activity android:name=".ui.activity.SelectBarViewActivity" />
        <activity android:name=".ui.activity.StepViewActivity" />
        <activity android:name=".ui.activity.DialogExampleActivity" />
        <activity android:name=".ui.activity.QRScanActivity" />
        <activity android:name=".hybird.WebViewActivity" />
        <activity android:name=".ui.activity.SkinModeActivity" />
        <activity android:name=".ui.activity.VideoPlayerActivity" />

    </application>

</manifest>